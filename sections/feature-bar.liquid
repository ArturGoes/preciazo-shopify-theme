<section class="feature-bar">
    {% for block in section.blocks %}
        <div class="feature-item">
            <div class="feature-icon">
                <i class="{{ block.settings.icon }}"></i>
            </div>
            <div class="feature-text">
                <h3>{{ block.settings.title }}</h3>
                <p>{{ block.settings.subtitle }}</p>
            </div>
        </div>
    {% endfor %}
</section>

{% schema %}
{
  "name": "Barra de Vantagens",
  "max_blocks": 4,
  "blocks": [
    {
      "type": "feature",
      "name": "Vantagem",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Ícone (Font Awesome)",
          "info": "Ex: fa-solid fa-truck-fast. Veja os ícones em fontawesome.com",
          "default": "fa-solid fa-truck-fast"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "Envío gratis"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtítulo",
          "default": "Por toda España"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Barra de Vantagens",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "icon": "fa-solid fa-truck-fast",
            "title": "Envío gratis",
            "subtitle": "Por toda España"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "fa-solid fa-hand-holding-dollar",
            "title": "Paga contra entrega",
            "subtitle": "Pago 100% seguro"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "fa-solid fa-shield-halved",
            "title": "Tus datos protegidos",
            "subtitle": "Certificado SSL"
          }
        }
      ]
    }
  ]
}
{% endschema %}