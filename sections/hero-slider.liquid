<div class="hero-container">
    <div class="swiper hero-slider">
        <div class="swiper-wrapper">
            {% for block in section.blocks %}
                <div class="swiper-slide" style="background-image: url('{{ block.settings.image | image_url: 'master' }}');">
                    <div class="hero-content">
                        {% if block.settings.heading != blank %}
                            <h1>{{ block.settings.heading }}</h1>
                        {% endif %}
                        {% if block.settings.subheading != blank %}
                            <p>{{ block.settings.subheading }}</p>
                        {% endif %}
                        {% if block.settings.button_link != blank and block.settings.button_label != blank %}
                            <a href="{{ block.settings.button_link }}" class="hero-cta">{{ block.settings.button_label }}</a>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="swiper-controls-container">
            <div class="swiper-pagination"></div>
            <button class="swiper-pause-button" aria-label="Pausar carrusel"><i class="fas fa-pause"></i></button>
        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>
</div>

{% schema %}
{
  "name": "Hero Slider",
  "max_blocks": 5,
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagem de Fundo"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Título",
          "default": "Novedades en Gadgets 2024"
        },
        {
          "type": "richtext",
          "id": "subheading",
          "label": "Subtítulo",
          "default": "<p>La tecnología que te mueve, ahora a tu alcance.</p>"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Texto do Botão",
          "default": "Descubre las Novedades"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Link do Botão"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}